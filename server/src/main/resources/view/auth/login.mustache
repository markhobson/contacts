{{<../page}}
	{{$title}}Sign in{{/title}}
	{{$self}}/login{{/self}}
	{{$container}}
	
		{{#logout}}
			<div itemscope="itemscope" itemtype="http://www.hobsoft.org/microdata/success" class="alert alert-success">
				<span itemprop="message">You have been signed out.</span>
			</div>
		{{/logout}}
	
		{{#error}}
			<div itemscope="itemscope" itemtype="http://www.hobsoft.org/microdata/error" class="alert alert-danger">
				<span itemprop="message">Incorrect username or password.</span>
			</div>
		{{/error}}
	
		<h1>Sign in</h1>
		
		<form name="login" method="post" action="/login">
			<div class="form-group">
				<label for="username">Username</label>
				<input type="text" id="username" name="username" class="form-control"/>
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" id="password" name="password" class="form-control"/>
			</div>
			<button type="submit" name="submit" class="btn btn-default">Sign in</button>
		</form>	
	
	{{/container}}
{{/../page}}
