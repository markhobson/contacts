<tag:page self="${contact.id.href}" title="Contact"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:tag="urn:jsptagdir:/WEB-INF/tags"
>
	<jsp:directive.page contentType="text/html"/>

	<div itemscope="itemscope" itemtype="http://schema.org/Person">
		<h1 itemprop="name">${contact.content.name}</h1>
		<link itemprop="url" href="${contact.id.href}"/>
	</div>
	
	<div>
		<a rel="delete" href="${contact.getLink('delete').href}" class="btn btn-danger">Delete</a>
	</div>

</tag:page>
